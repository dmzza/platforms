<%- model_class = Platform.new.class -%>
<div class="page-header">
  <h1><%= @station.name %> <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:northeast_track_id) %></th>
      <th><%= model_class.human_attribute_name(:southwest_track_id) %></th>
      <th><%= model_class.human_attribute_name(:heading) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= link_to platform.id, station_platform_path(@station, platform) %></td>
        <td><%= platform.northeast_track ? platform.northeast_track.direction : "" %></td>
        <td><%= platform.southwest_track ? platform.southwest_track.direction : "" %></td>
        <td><%= platform.heading %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_station_platform_path(@station, platform), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      station_platform_path(@station, platform),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_station_platform_path,
            :class => 'btn btn-primary' %>
