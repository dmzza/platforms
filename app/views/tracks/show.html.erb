<%- model_class = @track.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @track.duration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lesser_platform_id) %>:</strong></dt>
  <dd><%= @track.lesser_platform_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:greater_platform_id) %>:</strong></dt>
  <dd><%= @track.greater_platform_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:route_id) %>:</strong></dt>
  <dd><%= @track.route_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              route_tracks_path(@route), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_route_track_path(@track), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              route_track_path(@track),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
